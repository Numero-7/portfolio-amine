{
  "scripts": {
    "build": "yarn build:clean && gatsby build",
    "build:clean": "rimraf public",
    "build:serve": "gatsby serve-build",
    "deploy": "yarn build:clean && gatsby build --prefix-links && gh-pages -d public",
    "develop": "gatsby develop",
    "lint": "./node_modules/.bin/eslint '**/*.js'",
    "lint:staged": "lint-staged"
  },
  "dependencies": {
    "react": "15.4.2",
    "assets-loader": "^0.5.0",
    "front-matter": "^2.1.2",
    "gatsby": "^0.12.40",
    "markdown-it": "^7.0.1",
    "preact": "^7.2.1",
    "preact-compat": "^3.14.3",
    "react-helmet": "^3.2.2",
    "react-waypoint": "5.3.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.1",
    "babel-plugin-transform-react-remove-prop-types": "^0.3.3",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "gh-pages": "^0.12.0",
    "lint-staged": "^3.4.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.1"
  },
  "pre-commit": {
    "run": "lint:staged",
    "colors": true,
    "silent": true
  },
  "lint-staged": {
    "*.@(js|jsx)": "lint"
  }
}
