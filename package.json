{
  "scripts": {
    "build": "npm run build:clean && gatsby build",
    "build:clean": "rimraf public",
    "build:serve": "gatsby serve-build",
    "deploy": "npm run build:clean && gatsby build --prefix-links && gh-pages -d public",
    "develop": "gatsby develop",
    "lint": "npm run lint:js && npm run lint:scss",
    "lint:js": "./node_modules/.bin/eslint '**/*.js'",
    "lint:scss": "./node_modules/.bin/sass-lint '**/*.scss' -c .sass-lint.yml -v -q",
    "lint:staged": "lint-staged"
  },
  "dependencies": {
    "assets-loader": "^0.5.0",
    "gatsby": "^1.9.33",
    "gatsby-link": "^1.6.16",
    "gatsby-plugin-google-analytics": "^1.0.7",
    "gatsby-plugin-manifest": "^1.0.7",
    "gatsby-plugin-offline": "^1.0.9",
    "gatsby-plugin-preact": "^1.0.11",
    "gatsby-plugin-sass": "^1.0.12",
    "gsap": "^1.19.1",
    "isomorphic-pixi": "^0.1.0",
    "lodash": "^4.17.4",
    "pixi.js": "^4.5.5",
    "preact": "^8.2.5",
    "preact-transition-group": "^1.1.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-helmet": "^3.2.2",
    "react-router": "^4.2.0",
    "react-waypoint": "^7.1.0",
    "rezponsive": "^0.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.0",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.8",
    "copy": "^0.3.1",
    "eslint": "^4.7.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "gh-pages": "^1.0.0",
    "image-webpack-loader": "^3.4.2",
    "lint-staged": "^4.2.1",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2",
    "sass-lint": "^1.11.1",
    "webpack-bundle-analyzer": "^2.9.0"
  },
  "pre-commit": {
    "run": "lint:staged",
    "colors": true,
    "silent": true
  },
  "lint-staged": {
    "*.@(js)": "lint:js",
    "*.@(scss)": "lint:scss"
  }
}
